@model IEnumerable<UnamiSushi.Models.MenuItem>
@using UnamiSushi.Models


@if (Model != null)
{
    <h2 class="section-heading" style="float:left; font-family: Kaushan Script,Helvetica Neue,Helvetica,Arial,cursive; color:limegreen;">Sushi Burritos</h2>
    <h4 class="section-heading" style="float:right; color:limegreen;">C= Cooked   R= Raw   V= Vegetarian</h4>
    <br />
    
    @ for(int i = 1; i < 4; i++) //Sushido subcategories go from 1 to 3
    {
        <div class="grid">
            
            <table cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th style="width: 250px;">
                            @Switch (i)
                                Case 1:
                                    Classic Sushidos
                                    Break;
                                Case 2:
                                    Premium Sushidos
                                    Break;
                                Case 3:
                                    Vegetarian Sushidos
                                    Break;
                                    
                        </th>
                        <th style="width: 180px;">
                            Name
                        </th>
                        <th style="width: 100px;">
                            Price
                        </th>
                        <th style="width: 600px;">
                            Description
                        </th>
    
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(x => x.SubcategoryID == i))
                    {
                        
                        <tr>
                        
                            <td align="left">
                                //string imageString = item.MenuPictures.First().PicturePathname;
                                
                                string imageString = "/Photos/Normal/SushiRoll1.jpg";
                                <a href="@Url.Action("Details", "MenuItem", new { id = item.MenuItemID })">
                                    <img src="@Url.Content(imageString)" alt="image" width="200" height="150" style="padding-bottom: 10px;" />
                                </a>
                                <br />
                            </td>
                            
                            <td align="left">
                                @Html.ActionLink(item.MenuItemName, "Details", "MenuItem", new { id = item.MenuItemID }, null)
                            
                                @ if (item.Vegetarian)
                                {<img src="@Url.Content("~/Content/VegetarianSymbol.png")" alt="Vegetarian">}
                            </td>
                            
                            <td align="left">
                                @item.MenuItemPrice
                            </td>
                            
                            <td align="left">
                                @item.MenuItemDescription
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
    
        </div>
    }
}
